{
  "extends": "@packages/tsconfig/nestjs.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolvePackageJsonExports": false,
    "paths": {
      "@packages/types": ["../../packages/types/dist"],
      "@packages/utils": ["../../packages/utils/dist"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "migrations", "../../packages/*/src/**/*"]
}
