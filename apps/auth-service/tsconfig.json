{
  "extends": "@packages/tsconfig/nestjs.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolvePackageJsonExports": false,
    "noUnusedParameters": false,
    "paths": {
      "@packages/types": ["../../packages/types/dist"],
      "@packages/utils": ["../../packages/utils/dist"]
    }
  },
  "include": [
    "src/**/*",
    "migrations/**/*",
    "../api-gateway/src/common/types",
    "../api-gateway/src/types"
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "files": true
  }
}
